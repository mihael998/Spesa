<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Testo">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="Titolo" parent="Testo">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Sottotitolo" parent="Testo">
        <item name="android:textColor">#8c8c8c</item>
    </style>

    <style name="BottoneRotondo" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="TestoBottone" parent="BottoneRotondo">
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Action" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
